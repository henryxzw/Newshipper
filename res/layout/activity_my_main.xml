<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/baise"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="速步物流"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rela_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="发现"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/rela_huoche1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rela_title"
        android:background="@drawable/dian" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_huoche1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/rela_huoche"
                android:layout_width="match_parent"
                android:layout_height="200dip" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_number"
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:layout_below="@id/rela_huoche"
                android:background="@color/hongse" >

                <RelativeLayout
                    android:id="@+id/rela_xianshi"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:visibility="invisible" >

                    <TextView
                        android:id="@+id/text_chaoguo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="100dip"
                        android:text="超过"
                        android:textColor="@color/baise" />

                    <TextView
                        android:id="@+id/text_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="15dip"
                        android:layout_toRightOf="@id/text_chaoguo"
                        android:textColor="@color/baise"
                        android:textSize="24dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text_number"
                        android:text="辆车可提供服务"
                        android:textColor="@color/baise" />

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/yuntu"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/text_cirty"
                            android:layout_width="70dp"
                            android:layout_height="70dip"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:text="城市"
                            android:textColor="@color/baise" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rela_number"
                android:background="@drawable/line_rela_bg_wuyuanjiao"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rela_yueche"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp" >

                    <ImageView
                        android:id="@+id/img_yongche"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_now" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_yongche"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dip"
                        android:text="马上用车"
                        android:textColor="@color/heise"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_centerHorizontal="true"
                        android:text="方便快捷订货车"
                        android:textColor="@color/huise"
                        android:textSize="12dp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/text_gray1" />

                <RelativeLayout
                    android:id="@+id/rela_yuyueyongche"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp" >

                    <ImageView
                        android:id="@+id/img_yuyueyongche"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_bespeak" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_yuyueyongche"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dip"
                        android:text="预约用车"
                        android:textColor="@color/heise"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_centerHorizontal="true"
                        android:text="提前预约更省心"
                        android:textColor="@color/huise"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:background="@drawable/line_rela_bg_wuyuanjiao"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rela_order"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp" >

                    <ImageView
                        android:id="@+id/img_dingdanchaxun"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_s" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_dingdanchaxun"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dip"
                        android:text="订单查询"
                        android:textColor="@color/heise"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_centerHorizontal="true"
                        android:text="随时查看运货状态"
                        android:textColor="@color/huise"
                        android:textSize="12dp" />
                </RelativeLayout>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="match_parent"
                    android:background="@color/text_gray1" />

                <RelativeLayout
                    android:id="@+id/rela_zz"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="12dp" >

                    <ImageView
                        android:id="@+id/img_gengduowuliu"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/home_add" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_gengduowuliu"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dip"
                        android:text="更多物流"
                        android:textColor="@color/heise"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_centerHorizontal="true"
                        android:text="提高您的物流体验"
                        android:textColor="@color/huise"
                        android:textSize="12dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>