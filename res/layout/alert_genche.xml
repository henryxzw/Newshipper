<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_centerInParent="true"
        android:background="@color/alert_bg_gray" >

        <EditText
            android:id="@+id/edt_genche_number"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dip"
            android:background="@drawable/img_style_touxiang"
            android:gravity="center"
            android:inputType="number" />

        <TextView
            android:id="@+id/text_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/edt_genche_number"
            android:text="人跟车" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip" >

            <Button
                android:id="@+id/genche_quxiao"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_below="@id/rela"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:background="@drawable/button_land"
                android:text="取消"
                android:textColor="@color/baise"
                android:textSize="15sp" />

            <Button
                  android:id="@+id/genche_queding"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_below="@id/rela"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:background="@drawable/button_land"
                android:text="确定"
                android:textColor="@color/baise"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>