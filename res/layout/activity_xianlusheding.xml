<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/baise"
        android:gravity="center_vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/line_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_tab_bg" >

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@drawable/nva_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="线路设定"
            android:textColor="@color/text_shenhei"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/text_title"
            android:layout_marginTop="15dip"
            android:background="@color/text_gray1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginLeft="116dip"
            android:layout_marginTop="3dip" >

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@drawable/process_one" />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@id/img_1"
                android:src="@drawable/process_unselect" />

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="30dip"
                android:layout_toRightOf="@id/img_2"
                android:src="@drawable/process_unselect" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>