<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/addporla"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:background="#FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/backa"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地点信息"
            android:textColor="#000000"
            android:textSize="17dp"
            tools:ignore="SpUsage,HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#A1A1A1" />

    <Button
        android:id="@+id/addressdqwzbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:text="【当前位置】"
        android:textSize="17dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/addptva"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/kuang_dd"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:text="@string/xzdz"
        android:textColor="#848282"
        android:textSize="19dp"
        tools:ignore="HardcodedText,SpUsage" />

    <com.femto.shipper.activitya.Editzdyi
        android:id="@+id/addpetb"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/kuang_dd"
        android:drawablePadding="15dp"
        android:drawableRight="@drawable/qk"
        android:gravity="center_vertical"
        android:hint="联系人(选填)"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#000000"
        android:textSize="19dp"
        tools:ignore="HardcodedText,SpUsage" />

    <com.femto.shipper.activitya.Editzdyi
        android:id="@+id/addpetc"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/kuang_dd"
        android:drawableRight="@drawable/qk"
        android:gravity="center_vertical"
        android:hint="联系电话(选填)"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#000000"
        android:textSize="19dp"
        tools:ignore="HardcodedText,SpUsage" />

    <RelativeLayout
        android:id="@+id/ycatxlrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        tools:ignore="UselessLeaf" >

        <ImageView
            android:id="@+id/ycatxliv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/txl"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ycatxliv"
            android:text="通讯录"
            android:textColor="#000000"
            android:textSize="17dp"
            tools:ignore="HardcodedText,SpUsage" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/jiantou"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <Button
        android:id="@+id/addpbtna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/next"
        android:text="确定"
        android:textColor="#ffffff"
        tools:ignore="HardcodedText" />

</LinearLayout>