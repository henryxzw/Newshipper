<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_centerInParent="true"
        android:background="@color/alert_bg_gray" >

        <LinearLayout
            android:id="@+id/line_dianji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip" >

            <Button
                android:id="@+id/btn_bz_quxiao"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_below="@id/rela"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:background="@drawable/button_land"
                android:text="取消"
                android:textColor="@color/baise"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_bz_queren"
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_below="@id/rela"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="1"
                android:background="@drawable/button_land"
                android:text="确定"
                android:textColor="@color/baise"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_beizhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/line_dianji"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/img_style_touxiang"
            android:gravity="left|top"
            android:hint="备注可填写"
            android:padding="5dip" />
    </RelativeLayout>

</RelativeLayout>