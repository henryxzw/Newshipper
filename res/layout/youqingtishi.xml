<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
            android:layout_marginTop="5dp" 
            android:gravity="center">

         <TextView
             android:id="@+id/textView1"
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:text="      --------------" />

           <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:text="用速补，快人一步"/>
               <TextView
           
             android:layout_width="80dp"
             android:layout_height="wrap_content"
             android:text="--------------" />
     </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp" 
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/xin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:maxLength="80"
            android:text="我们将竭力让您享受到优质、安全、精准的物流用车体验" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp" 
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:maxLength="80"
            android:text="如车辆已派出，中途临时取消订车，我们将按实际路程计算收取跑空费" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp" 
          android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loudu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:maxLength="80"
            android:text="运费不含货物保险，如需货物运输保险请在更多物流中购买" />
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
           android:layout_marginTop="50dp"
         android:gravity="center" >

         <Button
             android:id="@+id/button_zd"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:background="@color/red"
             android:text="知道了" />

     </LinearLayout>

</LinearLayout>
