<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_quxiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_alignParentBottom="true"
        android:background="@color/popwindow_gray" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="75.5dip"
            android:background="@color/text_gray1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="142.5dip"
            android:background="@color/text_gray1" />

        <com.femto.shipper.view.PickerView
            android:id="@+id/pikcer_kind2"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip" >
        </com.femto.shipper.view.PickerView>

        <com.femto.shipper.view.PickerView
            android:id="@+id/pikcer_kind"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30dip" >
        </com.femto.shipper.view.PickerView>

        <com.femto.shipper.view.PickerView
            android:id="@+id/pikcer_kind3"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dip" >
        </com.femto.shipper.view.PickerView>

        <Button
            android:id="@+id/btn_wancheng"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:background="@drawable/button_land"
            android:text="完成"
            android:textColor="@color/baise"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>