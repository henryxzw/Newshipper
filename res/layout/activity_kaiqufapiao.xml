<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kaipiao_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <include
            android:id="@+id/left"
            layout="@layout/commom_back_btn" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发票"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/lin_kaipiaojilv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/common_tab_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="开票记录" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rela_title"
        android:background="@color/baise" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View1"
        android:background="@color/dandan_gray" >

        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/r_invoices" />

            <TextView
                android:id="@+id/text_kaipiaoedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/img"
                
                android:text="¥0"
                android:textSize="30dip" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="可开发票额度"
            android:textColor="@color/text_shenhei" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@color/text_gray1" />
    </RelativeLayout>

    <View
        android:id="@+id/View2"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout2"
        android:background="@color/fafafafa" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View2"
        android:background="@color/fafafafa"
        android:orientation="vertical"
        android:padding="15dip"
        android:paddingBottom="10dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/view"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/text_yuandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/view"
                android:text="您可开具最大发票额度的发票,可分次开具,每次开具金额不得低于50元" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <View
                android:id="@+id/view2"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/text_yuandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/view2"
                android:text="开票金额>300元可免费为您快递"
                android:textColor="@color/hongse"
                android:textSize="16dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <View
                android:id="@+id/view3"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/text_yuandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/view3"
                android:text="发票申请处理后,将于1-3个工作日寄出" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <View
                android:id="@+id/view4"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/text_yuandian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/view4"
                android:text="当天可开多张发票,如邮寄地址相同,可统一快递" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/rela_kfp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_land"
        android:text="我要开票"
        android:textColor="@color/baise" />

    <LinearLayout
        android:id="@+id/rela_ll_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/dian" />

        <Button
            android:id="@+id/rela_duanxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            android:text="普通发票" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/dian" />

        <Button
            android:id="@+id/rela_dianhua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            android:text="增值税发票" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/dian" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/transparent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/dian" />

        <Button
            android:id="@+id/rela_qx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            android:text="取消" />
    </LinearLayout>

</RelativeLayout>