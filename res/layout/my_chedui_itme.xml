<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/my_chedui_sijiImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:src="@drawable/siji" />

        <TextView
            android:id="@+id/my_chedui_siji_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/my_chedui_sijiImg"
            android:text="司机" />

        <TextView
            android:id="@+id/my_chedui_siji_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/my_chedui_siji_name"
            android:layout_alignTop="@+id/my_chedui_siji_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/my_chedui_siji_name"
            android:background="@drawable/x3b" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_chedui_siji_name"
            android:layout_below="@+id/my_chedui_siji_name"
            android:layout_marginTop="10dp"
            android:text="车牌：" />

        <TextView
            android:id="@+id/my_chedui_siji_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView1"
            android:layout_alignTop="@+id/TextView1"
            android:layout_toRightOf="@+id/TextView1"
            android:text="E ukddseh" />

        <ImageView
            android:id="@+id/my_chedui_siji_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/lianxi" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dip"
        android:background="@drawable/dian" />

</LinearLayout>