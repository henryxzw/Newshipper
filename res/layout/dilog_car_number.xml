<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alert_bg_gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_car_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:text="现有 12 辆"
        android:textColor="@color/hongse" />

    <TextView
        android:id="@+id/text_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:text="厢式5吨6.1*2.2*2.3有尾板车可提供服务"
        android:textColor="@color/hongse" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/tte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我需要"
            android:textSize="18dip" />

        <EditText
            android:id="@+id/edt_car_number"
            android:layout_width="100dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/tte"
            android:digits="1234567890"
            android:background="@drawable/img_style_touxiang"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/edt_car_number"
            android:text="辆"
            android:textSize="18dip" />
    </RelativeLayout>

    <Button
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginBottom="20dip"
        android:id="@+id/btn_wanc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dip"
        android:background="@drawable/button_land"
        android:text="完成"
        android:textColor="@color/baise"
        android:textSize="16sp" />

</LinearLayout>