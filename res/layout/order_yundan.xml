<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/baise" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rela_title" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/pingxing"
            android:text="运单号："
            android:textColor="#696969"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/yundanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textView2"
            android:text="B16011722133879"
            android:textColor="#696969"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView_1"
            android:layout_width="190dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/pingxing"
            android:background="@color/huise" />

        <TextView
            android:id="@+id/nice_siji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView_1"
            android:layout_marginTop="15dp"
            android:text="司机名"
            android:textColor="#696969"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nice_siji"
            android:layout_alignTop="@+id/nice_siji"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/nice_siji"
            android:text="车牌:"
            android:textColor="#696969"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/car_xing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nice_siji"
            android:layout_alignTop="@+id/nice_siji"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView5"
            android:text="E kkkkk437"
            android:textColor="#696969"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/tuoxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/morentouxiang" />



        <TextView
            android:id="@+id/zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/textView_1"
            android:text="已接单"
            android:textColor="@color/red"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/pingxing"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/nice_siji"
            android:layout_alignLeft="@+id/tuoxiang"
            android:src="@drawable/x3" />

    </RelativeLayout>

</LinearLayout>