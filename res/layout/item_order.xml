<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:background="@color/dandan_gray" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cap" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:text="下单\n成功" />

        <TextView
            android:id="@+id/text_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="20dip"
            android:layout_toRightOf="@id/text_state"
            android:text="订单号:"
            android:textColor="@color/baise" />

        <TextView
            android:id="@+id/text_dingdanhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="23dip"
            android:textSize="11dip"
            android:layout_toRightOf="@id/text_order"
            android:textColor="@color/baise" />

        <TextView
            android:id="@+id/text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="3dip"
            android:layout_toRightOf="@id/text_dingdanhao"
            android:text="¥400.00"
            android:textColor="@color/baise" />

        <TextView
            android:id="@+id/text_leixing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_order"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/text_state"
            android:text="5T~6T 板车"
            android:textColor="@color/baise" />

        <TextView
            android:id="@+id/text_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_order"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/text_leixing1"
            android:text="X1"
            android:textColor="@color/baise" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_leixing1"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/text_state"
            android:text="2015-02-03"
            android:textColor="@color/baise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_leixing1"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/time"
            android:text="X1"
            android:visibility="invisible"
            android:textColor="@color/baise" />
    </RelativeLayout>

</LinearLayout>