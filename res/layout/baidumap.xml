<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" >

        <ImageButton
            android:id="@+id/bmibtna"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:src="@drawable/backa"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/bmeta"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/bmibtna"
            android:background="@drawable/biankuang"
            android:hint="请输入地址信息"
            android:maxLines="1"
            android:paddingLeft="35dp"
            android:textColor="#000000"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/bmibtnb"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@drawable/yy"
            android:text="搜索"
            android:textColor="#ffffff"
            tools:ignore="ContentDescription,HardcodedText" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#A1A1A1" />

    <ListView
        android:id="@+id/bmlva"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clickable="true" />

    <ListView
        android:id="@+id/bmlvb"
        android:layout_width="fill_parent"
        android:layout_height="265dp" />

    <LinearLayout
        android:id="@+id/baidull"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:ignore="Orientation" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="#EEEEEE"
                android:text="历史记录"
                android:textColor="#000000"
                android:textSize="13dp"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/baidumapqklibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE"
                android:text="清空记录"
                android:textColor="#000000"
                android:textSize="13dp"
                tools:ignore="HardcodedText,SpUsage" />
        </RelativeLayout>

        <com.femto.shipper.activitya.FilpperListvew
            android:id="@+id/bmlvc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            tools:ignore="UselessLeaf" />

        <TextView
            android:id="@+id/baidutstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="亲,您还没有历史记录哦！"
            android:textColor="#999999"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>